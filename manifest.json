{
	"manifest_version": 2,
	"name": "Auto CCM",
	"version": "1.1",
	"description":"Auto CCM is a tool that streamlines formatting in CAS-ILE, a website used by University of Illinois Netmath students.",
	
	"background": {
		"scripts":["background.js"],
		"persistent":false
	},
	"content_scripts": [
	{
		"matches": [
			"https://courseware.illinois.edu/*", "http://courseware.illinois.edu/*"
		],
		"js": ["setup.js"]
	}
	],
	"page_action" :
		{
		"default_icon" : "icon.png",
		"default_title" : "Auto CCM"
	},
	"icons" : {
		"128" : "storeicon.png"
	},
	"permissions": ["activeTab", "contextMenus", "tabs"]
}